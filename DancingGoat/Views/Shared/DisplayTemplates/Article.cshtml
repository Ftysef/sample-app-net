@using DancingGoat.Helpers.Extensions
@model DancingGoat.Models.Article

<div class="col-md-3">
    <div class="article-tile">
        <a href="@Url.Action("Show", "Articles", new { urlSlug = Model.UrlPattern })">
            <img src="@Model.TeaserImage.FirstOrDefault()" title="Article @Model.Title" class="article-tile-image" sizes="@{new ResponsiveImageSizes(300)
.WithMediaCondition(new MediaCondition { MinWidth = 330, MaxWidth = 768, ImageWidth = 468 });}">
        </a>
        <div class="article-tile-date">
            @Model.PostDate?.ToString("M");
        </div>
        <div class="article-tile-content">
            <h2 class="h4">
                <a href="@Url.Action("Show", "Articles", new { urlSlug = Model.UrlPattern })">@Model.Title</a>
            </h2>
            <p class="article-tile-text">
                @Html.DisplayFor(vm => vm.Summary)
            </p>
        </div>
    </div>
</div>